{
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.(c|sc)ss$",
          "classnameTransform": "camelCaseOnly"
        }
      }
    ],

    "jsx": "react",

    "experimentalDecorators": true,
    "noImplicitAny": false,

    "outDir": "dist",
    "module": "esnext",
    "target": "ES2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,

    "lib": ["es2020", "es2019", "es2018", "DOM", "DOM.Iterable"],

    "baseUrl": "./src",
    // "paths": {
    //   "components/*": ["components/*"],
    //   "utils/*": ["utils/*"],
    //   "hooks/*": ["hooks/*"],
    //   "layout/*": ["layout/*"],
    // }
  },

  "include": [
    "src"
  ]

}